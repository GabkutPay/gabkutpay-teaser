const axios = require("axios");

const sendSMS = async (phoneNumber, message) => {
  try {
    const SENDCHAMP_API_KEY = process.env.SENDCHAMP_API_KEY;
    const senderName = "GABKUT";

    if (!SENDCHAMP_API_KEY) {
      console.warn("‚ùå Cl√© API Sendchamp manquante. SMS non envoy√©.");
      return;
    }

    const response = await axios.post(
      "https://api.sendchamp.com/api/v1/sms/send",
      {
        to: phoneNumber,
        message,
        sender_name: senderName,
        route: "non_dnd"
      },
      {
        headers: {
          Authorization: `Bearer ${SENDCHAMP_API_KEY}`,
          "Content-Type": "application/json"
        }
      }
    );

    if (response.data && response.data.status === "success") {
      console.log(`üì≤ SMS envoy√© √† ${phoneNumber}`);
    } else {
      console.error("‚ö†Ô∏è √âchec d‚Äôenvoi du SMS :", response.data);
    }
  } catch (error) {
    console.error("‚ùå Erreur Sendchamp :", error.message);
  }
};

module.exports = sendSMS;
